@model GowBoard.Models.Entity.Member

@{
    ViewBag.Title = "LogIn Page";
}

<main id="main">
    <section id="contact" class="contact mb-5">
        <div class="container" data-aos="fade-up">


            <div class="row justify-content-center mt-5 mb-5">
                <div class="form mt-5 col-lg-6 ">
                    <form action="/Member/LoginForm" method="post" role="form" class="php-email-form">

                        <div class="row justify-content-center">
                            <div class="col-lg-8 text-center mb-5">
                                <h1 class="page-title">Gow<br>Board</h1>
                                <br>
                                <h3 class="small-title">LogIn</h3>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="memberId" 
                                   value="@Request.Form["memberId"]" id="memberId" placeholder="ID" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="password" 
                                   value="@Request.Form["password"]" id="password" placeholder="Password" required>
                        </div>
                        <div class="text-center">
                            <div class="">
                                <button type="submit" style="width: 100%; height: 100%;">Log In</button>
                            </div>
                        </div>


                        <div class="row gy-4  mt-3 justify-content-center">
                            <div class="col-md-4 ">
                                <div class="info-item text-center">
                                    <h3><a href="@Url.Action("NewPassword", "Member", new { area = "" })">비밀번호 찾기</a></h3>
                                </div>
                            </div><!-- End Info Item -->

                            <div class="col-md-4">
                                <div class="info-item info-item-borders text-center">
                                    <h3><a href="@Url.Action("FindId", "Member", new { area = "" })">아이디 찾기</a></h3>
                                </div>
                            </div><!-- End Info Item -->

                            <div class="col-md-4">
                                <div class="info-item text-center">
                                    <h3><a href="@Url.Action("Register", "Member", new { area = "" })">회원가입</a></h3>
                                </div>
                            </div><!-- End Info Item -->

                        </div>
                    </form>
                </div>
            </div><!-- End Contact Form -->

            <br>

        </div>


    </section>

</main><!-- End #main -->
