
@{
    Layout = "~/Views/Shared/_MyPageLayout.cshtml";
    ViewBag.Title = "Profile Page";
}



<div id="sidebar-after">

    <section id="contact" class="contact mb-5">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center  mb-5">
                <div class="col-lg-10">
                    <div class="form">
                        <form action="forms/contact.php" method="post" role="form" class="php-email-form" style="padding: 100px;">

                            <div class="row justify-content-center">
                                <div class="col-lg-8 text-center mb-5">
                                    <h1 class="page-title">Gow<br>Board</h1>
                                    <br>
                                    <h3 class="small-title">Profile</h3>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-3">ID : </div>
                                <div class="col-md-9">@Model.MemberId</div>

                                <div class="col-md-3">Name : </div>
                                <div class="col-md-9">@Model.Name</div>

                                <div class="col-md-3">Email : </div>
                                <div class="col-md-9">@Model.Email</div>

                                <div class="col-md-3">Nickname : </div>
                                <div class="col-md-9">@Model.Nickname</div>

                                <div class="col-md-3">Phone : </div>
                                <div class="col-md-9">@Model.Phone</div>
                            </div>
                            <div class="text-center" style="margin-top: 50px;">

                                <div>
                                    <a href="@Url.Action("UpdateProfile","MyPage", new {area = ""})">
                                        <button type="button" class="ajax-btn" style="width:100%">프로필 수정</button>
                                    </a>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div><!-- End Contact Form -->
        </div>
    </section>
</div>
